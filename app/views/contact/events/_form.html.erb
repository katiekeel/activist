<%= form_for [:contact, @event] do |f| %>
<%= f.label :name %><br/>
<%= f.text_field :name %><br/><br/>

<%= f.label :description %><br/>
<%= f.text_area :description %><br/><br/>

<%= f.label :start_date %><br/>
<%= f.date_field :start_date %><br/><br/>

<%= f.label :end_date %><br/>
<%= f.date_field :end_date %><br/><br/>

<%= f.label :start_time %><br/>
<%= f.time_field :start_time %><br/><br/>

<%= f.label :end_time %><br/>
<%= f.time_field :end_time %><br/><br/>

<%= f.label :location %><br/>
<%= f.text_field :location %><br/><br/>

<%= f.label :zipcode %><br/>
<%= f.number_field :zipcode %><br/><br/>

<%= f.label :group %><br/>
<%= f.fields_for :groups, @event.groups do |group| %>
  <%= f.collection_select :group_ids, Group.where(contact: @contact).order(:name), :id, :name %>
<% end %><br/><br/>

<%= f.label :interests %><br/>
<%= f.fields_for :interests, @event.interests do |interest| %>
  <%= f.collection_check_boxes :interest_ids, Interest.order(:name), :id, :name %>
<% end %><br/><br/>

<%= f.submit %>
<% end %>

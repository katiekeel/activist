<%= form_for @account do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :password %><br/>
  <%= f.text_area :password %><br/><br/>

  Want to be a group lead? Check this box. <%= f.check_box :role, {}, "contact", "default" %><br/></br>

  <%= f.submit %>

<% end %>

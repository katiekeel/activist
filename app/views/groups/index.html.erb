<h1>All Groups</h1>

<div class="row">
  <div class="col-md-12">

    <table class="table">

      <thead>
        <th>Group</th>
        <th>Event Count</th>
        <th>Top Interest</th>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
        <tr>
          <th scope="row"> <%= group.name %></th>
            <td> <%= group.events.count %></td>
            <td> <%= link_to group.interests.first.name, interest_path(group.interests.first) %></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>

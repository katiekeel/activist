<h1>All Users</h1>

<h4><%= link_to "Create New User", new_admin_user_path %></h4>

<div class="row">
  <div class="col-md-12">

    <table class="table">

      <thead>
        <th>Username</th>
        <th>Group Count</th>
        <th>Contact for a Group?</th>
        <th>Event Count</th>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.name %></th>
            <td><%= user.groups.count %></td>
            <td><%= "Yes" if user.contact? %><%= "No" if user.default? || user.admin? %></td>
            <td><%= user.events.count %></td>
            <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
            <td><%= link_to "Delete", admin_user_path(user), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

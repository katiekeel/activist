<%= form_for [:admin, @user] do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :password %><br/>
  <%= f.text_area :password %><br/><br/>

  <%= f.label :role %><br/>
  <%= f.number_field :role %><br/><br/>
  
  <%= f.label :groups %><br/>
  <%= f.fields_for :groups, @event.groups do |group| %>
    <%= f.collection_select :group_ids, Group.order(:name), :id, :name %>
  <% end %><br/><br/>

  <%= f.label :interests %><br/>
  <%= f.fields_for :interests, @event.interests do |interest| %>
    <%= f.collection_select :interest_ids, Interest.order(:name), :id, :name %>
  <% end %><br/><br/>

  <%= f.submit %>

<% end %>
